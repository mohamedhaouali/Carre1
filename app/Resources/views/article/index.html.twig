{% extends "GestionProjetBundle::base.html.twig" %}

{% block A %}

<div class="row">

        <div class="col-md-3">
            <p class="lead">Listes Des Articles</p>
            <div class="list-group">
                <a href="{{path('article_new')}}"class="list-group-item">Ajouter</a>
                <a href="{{path('article_modifier')}}"class="list-group-item">editer</a>
                <a href="{{path('article_index')}}" class="list-group-item">afficher</a>
            </div>
        </div>
    
    
    <div class="col-md-9">
            <table class ="table table-striped">
                <thead>
    
    
            <tr>
