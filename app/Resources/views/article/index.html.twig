                <th>Titre</th>
                <th>Description</th>
                <th>Auteurs</th>
                
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td><a href="{{ path('article_show', { 'id': article.id }) }}">{{ article.id }}</a></td>
                <td>{{ article.titre }}</td>
                <td>{{ article.description }}</td>
                
            <td> {{article.nom}}</td>
                
                
                
                
             
            </tr>
        {% endfor %}
        </tbody>
    </table>

 </div>    
        </div>
