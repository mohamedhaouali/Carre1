{%  extends '::base.html.twig' %}
{%  block body %}
<div id="div_contato"  class=" spacer space-top">

    <div class="row" style="color: #FFF">
        <div class="col-sm-12 text-center wowload fadeInUp"><h2 id="id_titulo_contato">Contact</h2></div>
        <div class="col-sm-12 text-center wowload fadeInLeft"><h3 id="id_chamada_contato">Laissez un message et nous nous ferons un plaisir de vous repondre.</h3></div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
    <form action="{{ path('myapplication_contact') }}" method="post"  class="blogger">
        <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-5">
            <div class="form-group">
            <label for="nom" class="field prepend-icon">
                <label for="nom" class="field-icon"> </label>
                {{ form_widget(form.nom, { 'attr': {'class': 'form-control', 'placeholder': 'Nom' } }) }}
                {{ form_errors(form.nom) }}


            </label>
            <!-- end section -->
        </div>
            <div class="form-group">

            <label for="email" class="field prepend-icon">
                <label for="email" class="field-icon"></label>
                {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'Adresse mail' } }) }}
                {{ form_errors(form.email) }}


            </label>
            <!-- end section -->
        </div>
        <!-- end .section row section -->

            <div class="form-group">
            <label for="objet" class="field prepend-icon">
                <label for="objet" class="field-icon"> </label>
                {{ form_widget(form.objet, { 'attr': {'class': 'form-control', 'placeholder': 'Objet'|trans } }) }}
                {{ form_errors(form.objet) }}

            </label>
        </div>
        <!-- end section -->

            <div class="col-md-5">
                <div class="form-group">
            <label for="sujet" class="field prepend-icon" >
                <label for="sujet" class="field-icon"> </label>
                {{ form_widget(form.sujet, { 'attr': {'class': 'form-control', 'placeholder': 'ecrire votre message ici......'|trans } }) }}
                {{ form_errors(form.sujet) }}
            </label>
                </div></div>
            <div class="col-md-1"></div>
            <div class="clearfix"></div>
            <div class="col-lg-12 text-center" style="margin-top: 40px;">
        {{ form_rest(form) }}
        <!-- end section -->
            </div>
        <div>

            <button class="btn btn-info btn-large bold" type="submit" tabindex="5" id="submit"><i class="icon-envelope-alt"></i>Envoyer</button>
        </div></div>
    </form>

            </div>
        </div>
    </div>
            </div>



{%  endblock %}


